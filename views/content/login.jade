extends ../skel.jade
block content
	h2 Login
	form(action="", method="POST")
		fieldset
			.row
				.form-group.col-xs-12.col-md-6
					label(for="login_email") Email
					input#login_email.form-control(type="text", name="login_email", placeholder="Email" required)
				.form-group.col-xs-12.col-md-6
					label(for="login_password") Password
					input#login_password.form-control(type="password", name="login_password", placeholder="Password" required)
			.submit-register.text-right
				button.btn.btn-primary(type="submit") Login